<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/people_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/people_profile_image_holder"
        android:layout_width="@dimen/width_52"
        android:layout_height="@dimen/height_52"
        android:background="@drawable/border_rounded_rank_blue_thin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/iv_person_item_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2_5"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_person_item_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/people_profile_image_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin_13"
        android:text="Ming9399"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_person_follow_status"
        android:layout_width="@dimen/width_77"
        android:layout_height="@dimen/height_26"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Following"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:gravity="center"
        android:background="@drawable/border_of_button_grey"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>