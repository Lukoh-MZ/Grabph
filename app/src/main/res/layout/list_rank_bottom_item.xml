<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_bottom_rank_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_marginEnd="@dimen/margin_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text_rank"
        android:layout_width="@dimen/width_44"
        android:layout_height="@dimen/height_24"
        android:text="4"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/colorSearp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holder_image_bottom_ranker"
        android:layout_width="@dimen/width_46"
        android:layout_height="@dimen/width_46"
        android:background="@drawable/border_rounded_rank_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_text_rank">

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/iv_profile_bottom_ranker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_3"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_bottom_ranker"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_20"
        android:layout_marginStart="@dimen/margin_12"
        android:text="nelly"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toEndOf="@id/holder_image_bottom_ranker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_point_bottom_ranker"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_20"
            android:layout_marginEnd="@dimen/margin_8"
            app:layout_constraintEnd_toStartOf="@+id/ic_favorite_white_bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="34353"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/colorBottomRankingPoint"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_favorite_white_bottom"
            android:layout_width="@dimen/width_12"
            android:layout_height="match_parent"
            android:src="@drawable/ic_favorite_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>