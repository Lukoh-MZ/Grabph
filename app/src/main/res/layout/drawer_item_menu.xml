<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/material_drawer_menu_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:paddingEnd="@dimen/padding_4"
    android:paddingLeft="@dimen/padding_4"
    android:paddingRight="@dimen/padding_4"
    android:paddingStart="@dimen/padding_4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/material_drawer_icon"
            android:layout_width="@dimen/width_96"
            android:layout_height="@dimen/height_96"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/material_drawer_item_primary_icon_padding"
            android:paddingEnd="@dimen/padding_14"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/material_drawer_item_primary_icon_padding"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical|start"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/material_drawer_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical|start"
                    android:lines="1"
                    android:singleLine="true"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold"
                    tools:text="BBQ Buger" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/material_drawer_menu_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="bottom"
                    android:lines="1"
                    android:layout_marginStart="2dp"
                    android:singleLine="true"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/text_size_17"
                    android:textStyle="bold"
                    tools:text="$ 40" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/material_drawer_menu_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical|start"
                    android:lines="1"
                    android:singleLine="true"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/text_size_18"
                    tools:text="BBQ Buger" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|start"
        android:layout_marginStart="@dimen/margin_4"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/material_drawer_menu_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:singleLine="false"
            android:maxLines="3"
            android:lines="3"
            android:textDirection="anyRtl"
            android:textSize="@dimen/text_size_16"
            android:text="YES \n No \n true \n false"
            tools:ignore="HardcodedText" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>